<Addin id="ChatCommand" version="1.0" isroot="false">
    <Runtime>
        <Import assembly="ChatCommand.dll" />
    </Runtime>

    <Dependencies>
        <Addin id="MoistureBot" version="1.0" />
    </Dependencies>

    <Extension path="/MoistureBot/IReceiveFriendChatMessages">
        <Type type="MoistureBot.ChatCommand" />
    </Extension>
    <Extension path="/MoistureBot/IReceiveGroupChatMessages">
        <Type type="MoistureBot.ChatCommand" />
    </Extension>

    <ExtensionPoint path = "/MoistureBot/ChatCommand/IFriendChatCommand"> 
        <ExtensionNode name="ChatCommand" type="MoistureBot.ChatCommandNode" objectType="MoistureBot.IFriendChatCommand" /> 
    </ExtensionPoint> 

    <ExtensionPoint path = "/MoistureBot/ChatCommand/IGroupChatCommand"> 
        <ExtensionNode name="ChatCommand" type="MoistureBot.ChatCommandNode" objectType="MoistureBot.IGroupChatCommand" /> 
    </ExtensionPoint>

</Addin>