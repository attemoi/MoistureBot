<Addin id="HelpCommand" version="1.0" isroot="false">
    <Runtime>
        <Import assembly="HelpCommand.dll" />
    </Runtime>

    <Dependencies>
        <Addin id="ChatCommand" version="1.0" />
    </Dependencies>

    <Extension path = "/MoistureBot/ChatCommand/IFriendChatCommand"> 
        <ChatCommand commandName="help" type="MoistureBot.HelpCommand" /> 
    </Extension> 

    <Extension path = "/MoistureBot/ChatCommand/IGroupChatCommand"> 
        <ChatCommand commandName="help" type="MoistureBot.HelpCommand" /> 
    </Extension> 

</Addin>

