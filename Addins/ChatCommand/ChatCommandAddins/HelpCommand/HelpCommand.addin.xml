<Addin id="HelpCommand" version="1.0" isroot="false">

    <Runtime>
        <Import assembly="HelpCommand.dll" />
    </Runtime>

    <Dependencies>
        <Addin id="ChatCommand" version="1.0" />
    </Dependencies>

    <Extension path = "/MoistureBot/ChatCommand/IChatCommand"> 
        <ChatCommand
            commandName="help" 
            type="MoistureBot.HelpCommand" 
            commandDescription="Provides help for chat commands"
            /> 
    </Extension> 

</Addin>

