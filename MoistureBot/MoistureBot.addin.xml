<Addin 
        id="MoistureBot" 
        name="MoistureBot"
        version="1.0" 
        isroot="true" 
        author="Atte Moisio" 
        description="MoistureBot core">

    <Runtime>
        <Import assembly="MoistureBotLib.dll" />
    </Runtime>

    <Extension path="/MoistureBot/IConsoleCommand">
        <Type
            type="MoistureBot.ConsoleCommands.HelpCommand" 
            name="help" 
            shortDescription="Print help for a command."
            shortUsage="help &lt;command&gt;"
            description="Print help for a command."
            usage="help &lt;command&gt;"
              />
    </Extension>

    <Extension path="/MoistureBot/IConsoleCommand">
        <Type
            type="MoistureBot.ConsoleCommands.ExitCommand" 
            name="exit" 
            shortDescription="Disconnect from Steam and exit program."
            shortUsage="exit"
            description="Disconnect from Steam and exit program."
            usage="exit"
              />
    </Extension>


</Addin>